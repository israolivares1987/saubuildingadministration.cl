{% extends 'layout.html.twig' %}

{% block title %}{{parent()}} - Ver Detalle Cliente{% endblock %}

{% block content %}
    <div class="content-wrapper">
		<!-- Content Header (Page header) -->
		<div class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1 class="m-0">Ver Detalle Cliente</h1>
					</div>
					<!-- /.col -->
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item">
								<a href="{{ path('dashboard') }}">Dashboard</a>
							</li>
							<li class="breadcrumb-item">
								<a href="{{ path('mantenedores_clientes_index') }}">Clientes</a>
							</li>
							<li class="breadcrumb-item active">Ver Cliente</li>
						</ol>
					</div>
					<!-- /.col -->
				</div>
				<!-- /.row -->
			</div>
			<!-- /.container-fluid -->
		</div>
		<!-- /.content-header -->
        <!-- Main content -->
		<div class="content">
			<div class="container-fluid">
                <div class="row">
					<div class="col-md-2"></div>
					<div class="col-md-8">
                        <div class="card card-primary">
							<div class="card-header">
                			    <h3 class="card-title">Detalle Cliente</h3>
              			    </div>
							<table class="table">
                                <tbody>
                                    <tr>
                                        <th>Rut</th>
                                        <td>{{ cliente.rut }}</td>
                                        <th>Nombres</th>
                                        <td>{{ cliente.nombres }}</td>
                                    </tr>
                                    <tr>
                                        <th>Apellidos</th>
                                        <td>{{ cliente.apellidos }}</td>
                                        <th>Domicilio</th>
                                        <td>{{ cliente.domicilio }}</td>
                                    </tr>
                                    <tr>
                                        <th>Telefono1</th>
                                        <td>{{ cliente.telefono1 }}</td>
                                        <th>Telefono2</th>
                                        <td>{{ cliente.telefono2 }}</td>
                                    </tr>
                                    <tr>
                                        <th>Celular</th>
                                        <td>{{ cliente.celular }}</td>
                                        <th>RazonSocial</th>
                                        <td>{{ cliente.razonSocial }}</td>
                                    </tr>
                                    <tr>
                                        <th>Email1</th>
                                        <td>{{ cliente.email1 }}</td>
                                        <th>Email2</th>
                                        <td>{{ cliente.email2 }}</td>
                                    </tr>
                                    <tr>
                                        <th>Representante</th>
                                        <td>{{ cliente.representante }}</td>
                                        <th>Relacion</th>
                                        <td>{{ cliente.relacion }}</td>
                                    </tr>
                                    
                                    <tr>
                                        <th>Acciones</th>
                                        <td colspan='3'>
                                            <a href="{{ path('mantenedores_clientes_index') }}" class="btn btn-secondary">
                                                <i class="fas fa-arrow-left"></i> Volver
                                            </a>
                                            <a href="{{ path('cliente_editar', {'id': cliente.id}) }}" class="btn btn-primary">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                        </td>
                                    </tr>    
                                </tbody>
                            </table>
						</div>                        
                    </div>
                    <div class="col-md-2"></div>
                </div>
            </div>
			<!-- /.container-fluid -->
		</div>
		<!-- /.content -->
    </div>
{% endblock %}
