{% extends 'layout.html.twig' %}

{% block title %}{{parent()}} - Asignaciones Cliente - Unidad{% endblock %}

{% block content %}
<div class="content-wrapper">
   <!-- Content Header (Page header) -->
   <div class="content-header">
      <div class="container-fluid">
         <div class="row mb-2">
            <div class="col-sm-6">
               <h1 class="m-0"> Asignaciones Cliente - Unidad</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
               <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">Dashboard</a></li>
                  <li class="breadcrumb-item active">Asignaciones Cliente - Unidad</li>
               </ol>
            </div><!-- /.col -->
         </div><!-- /.row -->
      </div><!-- /.container-fluid -->
   </div>
   <!-- /.content-header -->

   <!-- Main content -->
   <div class="content">
      <div class="container-fluid">
         <div class="row">
            {% for message in app.flashes('cliente_success') %}
               <div class="col-12">
                  <div class="card card-success">
                  <div class="card-header">
                     <h3 class="card-title">¡Exitoso!</h3>

                     <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i>
                        </button>
                     </div>
                     <!-- /.card-tools -->
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body">
                     {{message}}
                  </div>
                  <!-- /.card-body -->
                  </div>
                  <!-- /.card -->
               </div>
            {% endfor %}
            {# <a href="{{ path('cliente_nuevo') }}" class="btn btn-app bg-success">
               <i class="fas fa-plus"></i> Nuevo
            </a> #}
            <div class="col-12">
               <div class="card card-primary">
                  <div class="card-header">
                     <h3 class="card-title">Criterios de Búsqueda</h3>
                  </div>
                  {{form_start(formFiltro)}}
                     <div class="card-body">
                        <div class="row">
                           <div class="col-3">
                              <div class="form-group">
                                 {{ form_row(formFiltro.conjunto) }}
                              </div>
                           </div>
                           <div class="col-2">
                              <div class="form-group">
                                 {{ form_row(formFiltro.tipoUnidad) }}
                              </div>
                           </div>
                           <div class="col-2">
                              <div class="form-group">
                                 {{ form_row(formFiltro.unidad) }}
                              </div>
                           </div>
                           <div class="col-3">
                              <div class="form-group">
                                 {{ form_row(formFiltro.persona) }}
                              </div>
                           </div>
                           <div class="col-2">
                              <div class="form-group">
                                 <label>&nbsp;</label>
                                 {{ form_row(formFiltro.filtrar) }}
                              </div>
                           </div>
                        </div>
                     </div>
                  {{ form_end(formFiltro) }}
                  <!-- /.card-body -->
               </div>
            </div>
            <div class="col-12">
               <div class="card">
                  {# <div class="card-header">
                     <h3 class="card-title">Listado de Clientes-Unidades</h3>
                  </div> #}
                  <!-- /.card-header -->
                  <div class="card-body table-responsive table-bordered p-0">
                     <table class="table table-hover text-nowrap">
                        <thead>
                        <tr>
                           <th></th>
                           <th colspan='4'>Datos de la Unidad</th>
                           <th colspan='3'>Datos del Propietario</th>
                        </tr>
                        <tr>
                           <th>Acciones</th>
                           <th>Tipo</th>
                           <th>Edificio</th>
                           <th>Piso</th>
                           <th>Unidad</th>
                           <th>Dueño</th>
                           <th>Representante</th>
                           <th>Correo</th>
                        </tr>
                        </thead>
                        <tbody>
                           {% for unidad in unidades %}
                              <tr>
                                 <td></td>
                                 <td>{{ unidad.tipoUnidad }}</td>
                                 <td>{{ unidad.edificio }}</td>
                                 <td>{{ unidad.piso }}</td>
                                 <td>{{ unidad.unidad }}</td>
                                 <td>{{ unidad.nombrePropietario }}</td>
                                 <td>{{ unidad.nombreRepresentante }}</td>
                                 <td>{{ unidad.email1 }}<br>{{ unidad.email2 ? unidad.email2 }} </td>
                              </tr>
                           {% else %}
                              <tr>
                                 <td colspan="8">No hay registros para mostrar</td>
                              </tr>
                           {% endfor %}
                        </tbody>
                     </table>
                  </div>
                  {# <div class="card-footer clearfix">
                     {{ knp_pagination_render(clientes) }}
                  </div> #}
                  <!-- /.card-body -->
               </div>
               <!-- /.card -->
            </div>
         </div>
         <!-- /.row -->
      </div><!-- /.container-fluid -->
   </div>
   <!-- /.content -->
</div>
{% endblock %}
